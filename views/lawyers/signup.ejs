<title>Lawrex | Sign Up as Lawyer</title>

  </head>
  <body>
    <a class="schedule-button" href="/">home</a>
    <div class="form_holder">
      <h2 class="fs-title" style="color: #fff">steps jquery form with Icons</h2>
      <form id="msform" action = "/lawyers/signup"  method = "POST"  enctype="multipart/form-data">
        <ul id="progressbar">
          <li class="active">1. Personal Details</li>
          <li>2. Contact Information</li>
          <li>3. Education and Experience</li>
          <li>4. Specialization and Court</li>
        </ul>
        <fieldset>
            <h2 class="fs-title">Personal Details</h2>
            <h3 class="fs-subtitle">We will never sell it</h3>
            <input type="text" name="name[first]" placeholder="First Name" />
            <input type="text" name="name[last]" placeholder="Last Name" />
            <input type="number" name="phone" placeholder="Phone" />
            <div class="addressDiv">
                <label for="" style="color: #757575;" class="addressLabel">Address</label>
                <br>
                <input type="text" name="address[house]" placeholder="House Number" style="margin-top: 8px;">
                <input type="text" name="address[locality]" placeholder="Locality">
                <input type="text" name="address[city]" placeholder="City">
                <input type="text" name="address[country]" placeholder="Country">
            </div>
            <div class="genderDiv">
                <label for="" style="color: #757575;">Gender</label>
                <br>
                <input type="radio" name="gender" value="Male" class="gender" id="male">
                <label for="male" style="color: black;">Male</label>
                <input type="radio" name="gender" value="Female" class="gender" id="female">
                <label for="female" style="color: black;">Female</label>
                <input type="radio" name="gender" value="Other" class="gender" id="others">
                <label for="others" style="color: black;">Others</label>
            </div>
            <textarea name = "aboutMe" class="form-control" rows="5" placeholder="About me"></textarea>
            <input 
            class = "form-control-file"
            type="file" 
            name="image" 
            id="image"/>

            <input
            type="button"
            name="next"
            class="next action-button"
            value="Next"
          />
          </fieldset>
        <fieldset>
          <h2 class="fs-title">Create your account</h2>
          <input type="text" name="username" placeholder="Username">
          <input type="email" name="email" placeholder="Email" />
          <input type="password" name="pass" placeholder="Password" />
          <input type="password" name="password" placeholder="Confirm Password" />
          <input
            type="button"
            name="previous"
            class="previous action-button"
            value="Previous"
          />
          <input
            type="button"
            name="next"
            class="next action-button"
            value="Next"
          />
        </fieldset>

        <!-- Education and experience -->
        <fieldset>
          <h2 class="fs-title">Education Details and Experience</h2>
          <div class="eduMainDiv">
            <label for="" style="color: #757575;">Education</label>
            <div class="eduDataDiv">
              <div class="eduData 0" id="education[0]">
                  <input type="text" name="education[institutionName]" placeholder="College" class="educationInput" />
                  <input type="text" name="education[completed]" placeholder="Year of passing" class="educationInput"/>
                  <div class="input-group mb-3">
                    <select name = "education[degreeType]" class="custom-select" id="inputGroupSelect01">
                      <option selected>Choose...</option>
                      <option value="Integrated LLB">Integrated LLb</option>
                      <option value="LLb">LLB</option>
                      <option value="LLM">LLM</option>
                      <option value="Other">Other</option>
                    </select>
                  </div>
              </div>
            </div>
          </div>

          <div class="expMainDiv">
            <label for="" style="color: #757575;">Experience</label>
            <div class="eduDataDiv">
              <div class="eduData 0" id="education[0]">
                  <input type="text" name="experience[expType]" placeholder="Experience Type" class="educationInput" />
                  <input type="text" name="experience[years]" placeholder="Years of Experience" class="educationInput"/>
                  <input type="text" name="experience[workPlace]" placeholder="Workplace">
              </div>
            </div>
          </div>
  
          <input
            type="button"
            name="previous"
            class="previous action-button"
            value="Previous"
          />
          <input
            type="button"
            name="next"
            class="next action-button"
            value="Next"
          />
        </fieldset>
        <fieldset>
            <h2 class="fs-title">Specialization and Court</h2>
            <div class="eduDataDiv">
              <div class="eduData 0" id="education[0]" style="justify-content: center; margin-bottom: 10px;">
                <input type="text" name="courts" placeholder="Court name" class="educationInput form-control"/>
            </div>
              <div class="eduData 0" id="education[0]" style="justify-content: center; margin-bottom: 10px;">
                <input type="text" name="practiceAreas" placeholder="Practice Area" class="educationInput form-control"/>
            </div>
            <div class="eduData">
                  <input type="text" name="specialization[specType]" placeholder="Specialization Type" class="educationInput form-control" />
                <input type="text" name="specialization[totalCases]" placeholder="Total cases" class="educationInput form-control"/>
                <input type="text" name="specialization[wonCases]" placeholder="Cases won" class="educationInput form-control"/>
                <input type="text" name="specialization[pendingCases]" placeholder="Pending cases" class="educationInput form-control"/>
              </div>
            </div>
            <!-- <span class="addEduBtn">+</span> -->
            <input
              type="button"
              name="previous"
              class="previous action-button"
              value="Previous"
            />
            <input
              type="submit"
              name="submit"
              class="submit action-button"
              value="Submit"
            />
          </fieldset>
      </form>
    </div>

    <!-- jquery CDN -->
    <!-- <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script> -->
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
    <!-- jquery-easing CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>


    <!-- Custom JS -->
    <script src="/js/signup.js"></script>
  </body>
</html>
